<Page
    x:Class="DrawingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrawingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Canvas x:Name="_canvas" Margin="0,40,0,0" Background="#FFFFFFA0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid Height="40" Margin="0,0,0,0" VerticalAlignment="Top" Background="#FFFFFFA0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="_diamondButton" Content="Diamond" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="40" Grid.Column="0" Background="Black" BorderBrush="White" Foreground="White"/>
            <Button x:Name="_lineButton" Content="Line" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="40" Grid.Column="2" BorderBrush="White" Background="Black" Foreground="White"/>
            <Button x:Name="_clearButton" Content="Clear" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="40" Grid.Column="4" Background="Black" BorderBrush="White" Foreground="White"/>
        </Grid>

    </Grid>
</Page>
